<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txt_city_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_weather"
        android:layout_below="@+id/txt_city_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txt_description"
        android:layout_below="@+id/img_weather"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/txt_tempr"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txt_tempr"
        android:layout_below="@+id/txt_city_name"
        android:layout_toRightOf="@+id/txt_description"
        android:layout_toEndOf="@+id/txt_description"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/humidity"
        android:id="@+id/txt_humidity"
        android:layout_below="@+id/txt_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txt_humidity_value"
        android:layout_alignTop="@+id/txt_humidity"
        android:layout_toRightOf="@+id/txt_description"
        android:layout_toEndOf="@+id/txt_description"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressure"
        android:id="@+id/txt_pressure"
        android:layout_below="@+id/txt_humidity"
        android:layout_toRightOf="@+id/img_weather"
        android:layout_toEndOf="@+id/img_weather"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txt_pressure_value"
        android:layout_below="@+id/txt_humidity_value"
        android:layout_toRightOf="@+id/txt_wind_value"
        android:layout_toEndOf="@+id/txt_wind_value"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind"
        android:id="@+id/txt_wind"
        android:layout_below="@+id/txt_pressure"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/txt_wind_value"
        android:layout_below="@+id/txt_pressure"
        android:layout_toRightOf="@+id/txt_humidity"
        android:layout_toEndOf="@+id/txt_humidity"/>
</RelativeLayout>
